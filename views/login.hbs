<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>indieartist - Log In</title>

    {{> head}}

    {{>particle}}
    <script src="/JS/login.js"></script>

</head>
<body style="font-family: 'Oswald', sans-serif;">

{{> header}}


<div class="container col-lg-4 col-sm-10" style="position: relative;top: 230px;">


    <form id="loginForm"  action="/login" method="post">

        <div class="input-group">
      <span class="input-group-btn">
        <button class="btn btn-secondary" type="button">Username</button>
      </span>
            <input id="username" autofocus type="text" tabindex="1" class="form-control" name="username">
        </div>

        <br>

        <div class="input-group">
      <span class="input-group-btn">
        <button class="btn btn-secondary" type="button">Password</button>
      </span>
            <input id="password" type="password" tabindex="2" class="form-control" name="password">
        </div>


        <br>

        <input id="submitForm" class="btn btn-block btn-success" tabindex="3" type="submit" value="Log In">

        <br>

    </form>
    <a href="/register">New User? Sign Up</a>
    <br><br>
    <a href="/forgotPassword">I forgot my Password !!</a>
    <br><br>
    <div id="alertDiv" style="visibility: hidden" class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>

        </button>

        <b id="alert"></b>

    </div>
    <div id="tipDiv" style="visibility: hidden" class="alert alert-warning alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>

        </button>

        <b id="tip"></b>

    </div>


</div>
</body>
</html>
