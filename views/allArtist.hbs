<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Discover Artist</title>
    {{> head}}
    {{> particle}}
</head>
<body style="font-family: 'Oswald', sans-serif;">
<canvas class="background"></canvas>

{{#if logged}}
    {{> profileHead}}
{{else}}
    {{> header}}
{{/if}}
<div class="container" style="padding-top: 100px;" >
{{#each data}}

    <div class="jumbotron" style="background:transparent !important;padding:1rem;">
        <div class="row" >
            <div class="col-3"><a href="/artist/{{username}}"><img src="/userImages/{{profile_image}}" class="img-fluid img-thumbnail"></img></a></div>
            <div class="col-9">
               <div class="row" style="font-size:1.4em;">{{name}}</div>
               <div class="row">{{bio}}</div>
             </div>

        </div>
        </a>
    </div>
{{/each}}
</div>
</body>
</html>
