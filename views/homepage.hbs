<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>IndieArtist</title>

    <script src="/JS/particlesjs/dist/particles.js"></script>
    <script>
        window.onload = function() {

            Particles.init({
                // normal options
                selector: '.background',
                maxParticles: 500,

                // options for breakpoints
                responsive: [
                    {
                        breakpoint: 768,
                        options: {
                            maxParticles: 200,
                            color: '#48F2E3',
                            connectParticles: true
                        }
                    }, {
                        breakpoint: 425,
                        options: {

                            maxParticles: 500,
                            color: '#48F2E3',
                            connectParticles: true
                        }
                    }, {
                        breakpoint: 5000,
                        options: {
                            color: '#14f2ef',
                            maxParticles: 600,
                            connectParticles: true// disables particles.js
                        }
                    }
                ]
            });
        }
    </script>
    <style>
        html, body {
               margin: 0;
               padding: 0;
             }

        .background {
            position: absolute;
            display: block;
            top: 0;
            left: 0;
            z-index: 0;
        }
    </style>
    {{> head}}
</head>
<body style="font-family: 'Oswald', sans-serif;">
<canvas class="background"></canvas>

{{#if logged}}
    {{> profileHead}}
{{else}}
    {{> header}}
{{/if}}



<div class="container" style="position: relative;top: 130px;">

    <!--create the home page here-->

</div>


</body>

</html>
