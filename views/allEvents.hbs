<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Discover Events</title>
    {{> head}}
</head>
<body style="font-family: 'Oswald', sans-serif;">

{{#if logged}}
    {{> profileHead}}
{{else}}
    {{> header}}
{{/if}}
<div class="container" style="padding-top: 100px;" >
    <h2>Search by category-</h2>
  <form action="/events/filter" method="post">
    <div class="input-group">
  <span class="input-group-btn">
    <button class="btn btn-secondary" style="margin:0 1rem 1rem 0;" type="button">Filter Events&nbsp;&nbsp;</button>
  </span>
        <div class="checkbox">
            <div class="container-fluid">
                  <label><input type="checkbox"  tabindex="2" name="category" value="music"> Music<br></label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <label><input type="checkbox" tabindex="2" name="category" value="standup"> Stand-up<br></label>&nbsp;&nbsp;&nbsp;&nbsp;
                  <label><input type="checkbox" tabindex="2" name="category" value="dance"> Dance<br></label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <label><input type="checkbox" tabindex="2" name="category" value="drama"> Drama<br></label>
                </div>
        </div>
        <input class="btn btn-block  btn-info" style="width:5rem;height:2.5rem;" tabindex="7" type="submit" value="Search">
    </div>
    <br>
  </form>
    <hr>
{{#each data}}

      <div class="jumbotron" style="height:380px;">
          <div class="row">

              <div class="col-md-4">
                  <a href="/events/{{name}}" style="text-decoration : none"><img src="/eventImages/{{event_img}}" alt="img1" height="240" ></a>
                  <br><br>
                  <div class="row">

                      <div class="col-md-4">
                  <form action="/events/filter" method="post">
                      <!--<input type="hidden" name="category" value={{category}} />-->
                      <input  type='submit' class='btn btn-info' name='category' value={{category}} />
                  </form>
                      </div>
                      <div class="col-md-4">
                          <button style="float:right;" class="btn btn-success"><span style="font-size:.8em;">BUY NOW</span> <i class="fa fa-inr" aria-hidden="true"></i>{{price}}</button>

                      </div>
                  </div>


              </div>
              <div class="'col-md-4"></div>
              <div class="col-4">
                 <div class="row" style="font-size:1.4em;">{{name}}</div>
                 <div class="row">{{desc}}</div>
                 <div class="row" style="color:grey;">{{venue}}</div>
                 <div class="row" style="margin-top:1rem;">
                  <!--<button type="button" class="btn btn-default">-->
                      <!--<span class="badge" style="color:grey;">{{category}}</span>-->
                  <!--</button>-->

                 </div>
                 <div class="row" style="position:absolute; bottom:0">
                   <div class="col-9">
                     <div class="row">{{date}}</div>
                     <div class="row">{{time}}</div>
                       <div class="row">{{likes}}going</div>
                   </div>

                 </div>
               </div>
          </div>
      </div>

{{/each}}
</div>
</body>
</html>
